<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Controllers-->
    <servlet>
        <servlet-name>usersListController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.UsersListController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>usersListController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userUpdateController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.UserUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userUpdateController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userCreateController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.UserCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userCreateController</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signinController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.SigninController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>signinController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signoutController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.SignoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>errorController</servlet-name>
        <servlet-class>ru.job4j.servlets.controller.ErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>errorController</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <!--Filters-->
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>ru.job4j.servlets.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>